+/* Set the PRIME profile */
+static gboolean set_mode(gchar *mode, gchar **error_msg, gint *exit_status) {
+
+    gchar *command = NULL;
+    command = g_strconcat("/usr/bin/pkexec /usr/bin/prime-select ",
+                          mode, NULL);
+    gboolean status;
+    gchar *output = NULL;
+    gchar *error_str = NULL;
+    GError *error = NULL;
+    status = g_spawn_command_line_sync(command, &output, &error_str, exit_status, &error);
+    g_free(command);
+
+    if (!status) {
+        if (error->message) {
+            *error_msg = g_strdup(error->message);
+        }
+        if (output)
+            g_free(output);
+
+        if (error_str)
+            g_free(error_str);
+
+        if (error)
+            g_error_free(error);
+
+        return status;
+    }
+
+    if (exit_status != 0) {
+        error_str[strlen(error_str) - 1] = '\0';
+        *error_msg = g_strdup(error_str);
+    }
+
+    if (output)
+        g_free(output);
+
+    if (error_str)
+        g_free(error_str);
+
+    if (error)
+        g_error_free(error);
+
+    return status;
+}
