+/* Get the active GPU */
+static gboolean get_active_gpu(gchar **gpu) {
+    gchar *command = "/usr/bin/prime-select query";
+    gboolean status;
+    int exit_status = 0;
+    gchar *output = NULL;
+    gchar *error_str = NULL;
+    GError *error = NULL;
+    status = g_spawn_command_line_sync(command, &output, &error_str, &exit_status, &error);
+
+    if (!status) {
+        /* If we get here, something seriously broken */
+        g_error("PRIME error: %s", error->message);
+        if (output)
+            g_free(output);
+
+        if (error_str)
+            g_free(error_str);
+
+        if (error)
+            g_error_free(error);
+
+        return status;
+    }
+
+    if (output) {
+        output[strlen(output) - 1] = '\0';
+        *gpu = g_strdup(output);
+    }
+
+    if (output)
+        g_free(output);
+
+    if (error_str)
+        g_free(error_str);
+
+    if (error)
+        g_error_free(error);
+
+    return status;
+}
