+/* Check if a PRIME mode is enabled */
+static gboolean is_mode_enabled(gchar *mode) {
+    gboolean status;
+    gchar *gpu = NULL;
+
+    get_active_gpu(&gpu);
+
+    g_message("PRIME: detected gpu: \"%s\"", gpu);
+
+    status = (strcmp(mode, gpu) == 0);
+
+    g_free(gpu);
+
+    return status;
+}
